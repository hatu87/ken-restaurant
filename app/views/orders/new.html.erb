<div class="row">
  <div class="col-md-12">
    <div class="display-4">Checkout</div>
  </div>
</div>
<hr/>
<div class="row">
  <div class="col-md-4">
    <h4>Your Order</h4>
    <ul class="list-group">
      <% @cart.cart_items.each do |item| %>
      <li class="list-group-item">
        <span class="label label-default label-pill pull-right"><%= number_to_currency item.price * item.quantity, unit: 'VND ', precision: 0 %></span>
        <%= "#{item.food.name} x #{item.quantity}" %>
      </li>
      <% end %>
      <li class="list-group-item">
        <span class="label label-primary label-pill pull-right">
          <%= number_to_currency @cart.total_price, unit: 'VND ', precision: 0 %>
        </span>
        <strong>Total price </strong>
      </li>
    </ul>
  </div>
  <div class="col-md-8">
    <h4>Customer Information</h4>
    <%= form_for(@order) do |f| %>
    <fieldset class="form-group">
      <label>Name</label>
      <%= f.text_field :customer_name, value: 'ken', class: 'form-control'%>
    </fieldset>
    <fieldset class="form-group">
      <label>Email</label>
      <%= f.text_field :email, value: 'hatu87@gmail.com', class: 'form-control', type: 'email' %>
    </fieldset>
    <fieldset class="form-group">
      <label>Phone</label>
      <%= f.text_field :phone, value: '+841698861996', class: 'form-control'%>
    </fieldset>
    <fieldset class="form-group">
      <label>Address</label>
      <%= f.text_field :address, value: 'test address', class: 'form-control'%>
    </fieldset>
    <button class="btn btn-danger"><i class="fa fa-cart-arrow-down fa-lg"></i> Checkout</button>
    <% end %>
  </div>
</div>