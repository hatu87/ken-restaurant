<% provide(:title, "Contact Us") %>
<div class="row">
  <div class="col-md-8">
    <div id="map">
    </div>
    <script src="//maps.google.com/maps/api/js?key=AIzaSyCqWP0S3fzxWmdi6uEqguZSmv6hkjXMeqo">
    </script>
    <!-- only if you need custom infoboxes -->
  </div>
  <div class="col-md-4">
    <div class="display-4">
      Contact Us
    </div>
    <div class="row">
      <address class="col-md-6">
        <i class="fa fa-map-marker">
        </i>
        702 Nguyễn Văn Linh,Tân Phong,Hồ Chí Minh,Việt Nam
      </address>
      <div class="col-md-6">
        <i class="fa fa-phone">
        </i>
        (+84) 8 3776 1369
      </div>
    </div>
    <form class="row col-md-12">
      <fieldset class="form-group">
        <input name="name" class="form-control form-control-outline" placeholder="Name" />
      </fieldset>
      <fieldset class="form-group">
        <input name="email" class="form-control" placeholder="Email" />
      </fieldset>
      <fieldset class="form-group">
        <textarea class="form-control" rows="4" placeholder="Message"></textarea>
      </fieldset>
      <button class="btn btn-primary">
        Send
      </button>
    </form>
  </div>
</div>
